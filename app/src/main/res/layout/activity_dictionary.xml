<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.baiyuweather.DictionaryActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/dictionary_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".60"
        android:hint="@string/editText_hint"
        android:shadowColor="@color/colorPrimaryLight"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:imeOptions="actionSearch"
        android:inputType="text"
        />

    <Button
        android:id="@+id/dictionary_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="dictionarySearch"
        android:text="@string/word_search"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dictionary_editText"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/dictionary_editText" />

</android.support.constraint.ConstraintLayout>
